<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Client_app" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/monokai_yellow</item>
        <item name="colorPrimaryVariant">@color/monokai_yellow</item>
        <item name="colorOnPrimary">@color/monokai_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/monokai_magenta</item>
        <item name="colorSecondaryVariant">@color/monokai_magenta</item>
        <item name="colorOnSecondary">@color/monokai_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/monokai_black</item>
        <!-- Text Size -->
        <item name="android:textSize">17sp</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/monokai_white</item>
        <item name="colorOnSurface">@color/monokai_black</item>
        <item name="colorError">@color/monokai_red</item>
        <item name="colorOnError">@color/monokai_black</item>
        <item name="colorOnBackground">@color/monokai_background</item>
        <item name="gray_foreground">@color/monokai_black</item>
        <item name="gray_background">@color/monokai_gray</item>
        <item name="special_highlight">?attr/colorSecondary</item>
    </style>

    <style name="Theme.Client_app.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Client_app.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Client_app.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>